    "build:types": "tsc",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@chremata-preset/playwright": "file:../chremata-preset/packages/playwright",
    "@chremata-preset/prettier": "file:../chremata-preset/packages/prettier",
    "@chremata-preset/rollup": "file:../chremata-preset/packages/rollup",
    "@chremata-preset/typescript": "file:../chremata-preset/packages/typescript"
  }
}