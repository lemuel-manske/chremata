{
  "name": "@chremata/utils",
  "description": "Chremata utilities & helpers",
  "license": "MIT",
  "version": "0.0.0",
  "engines": {
    "node": ">=24 <25"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemuel-manske/chremata",
    "directory": "frontend/packages/chremata-utils"
  },
  "private": true,
  "author": "lemuel-manske",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:js",
