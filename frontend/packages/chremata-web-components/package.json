  "description": "Chremata Web Components",
  "license": "MIT",
  "engines": {
    "node": ">=24 <25"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemuel-manske/chremata.git",
    "directory": "frontend/packages/chremata-web-components"
  },
  "private": true,
  "author": "lemuel-manske",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "storybook dev",
    "build": "npm run clean && npm run build:types && npm run build:js",
