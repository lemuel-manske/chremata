    "@storybook/test": "^8.6.14",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "jest": "^30.1.3",
    "jest-transform-css": "^6.0.3",
    "rollup": "^4.49.0",
    "typescript": "^5.9.2",
    "vite": "^6.0.0"
