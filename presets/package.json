{
  "name": "@chremata/presets",
  "description": "Set of presets to setup web projects",
  "version": "0.0.0",
  "private": true,
  "author": "lemuel-manske",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "github:lemuel-manske/chremata",
    "directory": "presets"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces",
    "clear": "npm run clear:ts && npm run clear:dist && npm run clear:node_modules",
    "clear:ts": "find . -name '*.tsbuildinfo' | xargs -exec rm -f",
    "clear:dist": "find . -name dist | xargs -exec rm -rf",
    "clear:node_modules": "find . -name node_modules | xargs -exec rm -rf"
  },
  "engines": {
    "node": ">=24 <25"
  }
}
