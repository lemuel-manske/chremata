{
  "extends": "@chremata-preset/typescript/web",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "rootDir": "src",
  },
  "include": ["./src"],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/**/*.stories.tsx",
    "./src/**/*.stories.ts"
  ]
}
