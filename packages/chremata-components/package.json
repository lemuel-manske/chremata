{
  "name": "@chremata/components",
  "version": "0.0.0",
  "description": "Chremata Web Components",
  "license": "MIT",
  "engines": {
    "node": ">=24 <25"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemuel-manske/chremata.git",
    "directory": "packages/chremata-components"
  },
  "private": true,
  "author": "lemuel-manske",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "npm run lint:source:fix && npm run lint:format:fix",
    "lint:source": "eslint .",
    "lint:source:fix": "npm run lint:source -- --fix",
    "lint:format": "prettier --check --ignore-path .gitignore .",
    "lint:format:fix": "prettier --write --ignore-path .gitignore .",
    "dev": "storybook dev",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc",
    "build:js": "rollup -c",
    "test": "jest --config jest.config.ts",
    "test:e2e": "playwright test -c playwright-ct.config.ts"
  },
  "peerDependencies": {
    "@chremata/fonts": "file:../chremata-fonts",
    "@chremata/icons": "file:../chremata-icons",
    "@chremata/themes": "file:../chremata-themes",
    "@chremata/utils": "file:../chremata-utils",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@chremata-preset/eslint": "file:../chremata-presets/packages/chremata-preset-eslint",
    "@chremata-preset/jest": "file:../chremata-presets/packages/chremata-preset-jest",
    "@chremata-preset/playwright": "file:../chremata-presets/packages/chremata-preset-playwright",
    "@chremata-preset/prettier": "file:../chremata-presets/packages/chremata-preset-prettier",
    "@chremata-preset/rollup": "file:../chremata-presets/packages/chremata-preset-rollup",
    "@chremata-preset/typescript": "file:../chremata-presets/packages/chremata-preset-typescript",
    "@jest/globals": "^30.1.2",
    "@playwright/experimental-ct-react": "^1.55.0",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "jest-transform-css": "^6.0.3",
    "prettier": "^3.6.2",
    "rollup": "^4.49.0",
    "typescript": "^5.9.2",
    "vite": "^6.0.0"
  }
}
