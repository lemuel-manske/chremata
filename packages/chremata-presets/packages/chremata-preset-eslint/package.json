{
  "name": "@chremata-preset/eslint",
  "version": "0.0.0",
  "description": "Chremata ESLint configuration",
  "license": "MIT",
  "engines": {
    "node": ">=24 <25"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemuel-manske/chremata.git",
    "directory": "frontend/chremata-presets/packages/chremata-preset-eslint"
  },
  "private": true,
  "author": "lemuel-manske",
  "type": "module",
  "main": "./eslint-config.js",
  "exports": {
    ".": {
      "import": "./eslint-config.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint:source": "eslint .",
    "lint:source:fix": "npm run lint:source -- --fix",
    "lint:format": "prettier --check --ignore-path .gitignore .",
    "lint:format:fix": "prettier --write --ignore-path .gitignore ."
  },
  "peerDependencies": {
    "eslint": "^9.35.0"
  },
  "devDependencies": {
    "@chremata-preset/prettier": "file:../chremata-preset-prettier",
    "@chremata-preset/typescript": "file:../chremata-preset-prettier",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.43.0"
  }
}
