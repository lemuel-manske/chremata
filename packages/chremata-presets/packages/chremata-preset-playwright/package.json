{
  "name": "@chremata-preset/playwright",
  "version": "0.0.0",
  "description": "Chremata Playwright configuration",
  "license": "MIT",
  "engines": {
    "node": ">=24 <25"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemuel-manske/chremata.git",
    "directory": "frontend/chremata-presets/packages/chremata-preset-playwright"
  },
  "private": true,
  "author": "lemuel-manske",
  "type": "module",
  "exports": {
    "./test": {
      "import": "./dist/test.js",
      "types": "./dist/test.d.ts"
    },
    "./config": {
      "import": "./dist/playwright-config.js",
      "types": "./dist/playwright-config.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "lint:source": "eslint .",
    "lint:source:fix": "npm run lint:source -- --fix",
    "lint:format": "prettier --check --ignore-path .gitignore .",
    "lint:format:fix": "prettier --write --ignore-path .gitignore .",
    "build": "npm run build:types && npm run build:js",
    "build:js": "rollup -c",
    "build:types": "tsc"
  },
  "peerDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/experimental-ct-react": "^1.55.0",
    "@playwright/test": "^1.55.0",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@chremata-preset/prettier": "file:../chremata-preset-prettier",
    "@chremata-preset/eslint": "file:../chremata-preset-eslint",
    "@chremata-preset/rollup": "file:../chremata-preset-rollup",
    "@chremata-preset/typescript": "file:../chremata-preset-typescript",
    "@types/lodash.merge": "^4.6.9",
    "rollup": "^4.50.1",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "prettier": "^3.6.2"
  }
}
